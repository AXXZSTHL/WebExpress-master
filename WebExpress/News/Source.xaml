<UserControl x:Class="WebExpress.Source"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="300">
    <Grid Background="White">
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="26,8,0,7" TextWrapping="Wrap" Text="Title" Foreground="#FF444444" FontSize="13"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="16" Margin="6,12,0,0" VerticalAlignment="Top" Width="16"/>
        <Button x:Name="button" HorizontalAlignment="Right" Width="18" Margin="0,7,12,0" Background="{x:Null}" BorderBrush="{x:Null}" Click="button_Click" Height="18" VerticalAlignment="Top">
            <StackPanel>
                <Image x:Name="CloseImage" Source="pack://application:,,,/Resources/close_button.png"></Image>
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
