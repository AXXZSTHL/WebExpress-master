<UserControl x:Class="WebExpress.Controls.FlatButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress.Controls"
             mc:Ignorable="d" 
             PreviewMouseDown="UserControl_PreviewMouseDown"
             d:DesignHeight="32" d:DesignWidth="64">
    <Grid ClipToBounds="True" x:Name="bg">
        <Label x:Name="textBlock" HorizontalAlignment="Center" Content="TEXT" VerticalAlignment="Center" FontFamily="/WebExpress;component/Resources/#Roboto Medium"/>
        <Ellipse x:Name="Ripple" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
