<UserControl x:Class="WebExpress.Controls.TextIconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="128" PreviewMouseDown="UserControl_PreviewMouseDown" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid ClipToBounds="True" x:Name="bg" Background="White">
        <Label x:Name="textBlock" HorizontalAlignment="Left" Margin="44,6,0,4" Content="Text" VerticalAlignment="Center" FontFamily="/WebExpress;component/Resources/#Roboto Medium" Opacity="0.54"/>
        <Image x:Name="image" HorizontalAlignment="Left" Width="18" Margin="17,9,0,9" Opacity="0.54"/>
        <Ellipse x:Name="Ripple" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
