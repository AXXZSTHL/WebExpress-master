<UserControl x:Class="WebExpress.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="42" PreviewMouseDown="UserControl_PreviewMouseDown" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid ClipToBounds="True" x:Name="bg" Background="Transparent">
        <Image Source="pack://application:,,,/Resources/menu.png" x:Name="image" Opacity="0.70" Height="16" Width="16"/>
        <Ellipse x:Name="Ripple" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
