<UserControl x:Class="WebExpress.Controls.SnackBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress.Controls"
             mc:Ignorable="d" 
             SizeChanged="SnackBar_OnSizeChanged"
             d:DesignHeight="42" d:DesignWidth="300">
    <Grid Background="#323232" >
        <Label x:Name="label" Foreground="#FFF" Content="Label" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center" FontFamily="/WebExpress;component/Resources/#Roboto Medium"/>
        <local:FlatButton x:Name="OKBtn" HorizontalAlignment="Right" Margin="0,0,20,0" Height="32" PreviewMouseUp="OKBtn_OnPreviewMouseUp" VerticalAlignment="Center" Width="64"/>

    </Grid>
</UserControl>
