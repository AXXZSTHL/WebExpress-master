<UserControl x:Class="WebExpress.Extensions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White" SizeChanged="Grid_SizeChanged">
        <Canvas x:Name="canvas" Margin="0,70,0,0">

        </Canvas>
        <Grid HorizontalAlignment="Stretch" Height="70" VerticalAlignment="Top" Background="#FF1ABC9C">
            <Grid.Effect>
                <DropShadowEffect Direction="-90" ShadowDepth="10" BlurRadius="15" Opacity="0.25"/>
            </Grid.Effect>
            <Label x:Name="Header" Content="Extensions" HorizontalAlignment="Left" Margin="38,7,0,0" VerticalAlignment="Top" Foreground="White" FontSize="32"/>
        </Grid>

    </Grid>
</UserControl>
